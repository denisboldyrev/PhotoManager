<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" title="Manage">Signed in as @User.Claims.SingleOrDefault(x=>x.Type == "name").Value</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline"  asp-area="" asp-controller="Account" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-dark btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
    </li>
}
</ul>
